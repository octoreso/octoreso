
#container
  #map-container
    #map
  #sidebar-container
    #sidebar
      #sidebar-menu
        .container-fluid
          .row
            .col-lg-2
              %a.glyphicon.glyphicon-home{ href: '#', title: t('main_menu.home'), data: { ajax: 'content', content_id: 1, toggle: 'tooltip', placement: 'bottom' } }
            .col-lg-6
              %a.glyphicon.glyphicon-th-large{ href: '#', title: t('main_menu.communities'), data: { ajax: 'communities', toggle: 'tooltip', placement: 'bottom' } }
              %a.glyphicon.glyphicon-th{ href: '#', title: t('main_menu.mission_series'), data: { ajax: 'mission-series-collection', toggle: 'tooltip', placement: 'bottom' } }
              %a.glyphicon.glyphicon-map-marker{ href: '#', title: t('main_menu.missions'), data: { ajax: 'missions', toggle: 'tooltip', placement: 'bottom' } }
            .col-lg-4
              .text-right
                - if current_user.present?
                  %a.glyphicon.glyphicon-wrench{ href: admin_url(subdomain: 'admin'), title: t('main_menu.backend') , data: { toggle: 'tooltip', placement: 'bottom' } }
                  %a.glyphicon.glyphicon-eject{ href: destroy_user_session_url(subdomain: nil), title: t('main_menu.logout', email: current_user.email), data: { toggle: 'tooltip', placement: 'bottom' } }
                - else
                  %a.glyphicon.glyphicon-user{ href: user_omniauth_authorize_url(subdomain: nil, provider: 'google_oauth2'), title: t('main_menu.login'), data: { toggle: 'tooltip', placement: 'bottom' } }
      #sidebar-content

#spinner-container
  #spinner
    = image_tag 'ajax_loader.gif'


= javascript_include_tag 'ingress'
%script{src: "//maps.googleapis.com/maps/api/js?key=AIzaSyAE7CVgjwE9GJoWWjc7f3dcLTjBJVBWvVU&callback=MapLoader&signed_in=false"}
