= render 'show_community', community: @community

= simple_form_for(@community, html: { class: 'form-horizontal' }, url: admin_ingress_community_path) do |f|
  %table.table.table-condensed.table-striped
    %col{ style: 'width:30%;' }
    %col{ style: 'width:10%;' }
    %col{ style: 'width:30%;' }
    %col{ style: 'width:30%;' }
    %thead
      %tr
        %th{ colspan: 3 } Missions
      %tr
        %th{  } Mission Series
        %th{  } Series Index
        %th{  } Mission Name
        %th{  } Link
    %tbody
      = f.simple_fields_for :all_missions do |sf|
        - if can? :edit, sf.object
          = render 'edit_mission', mission: sf.object, sf: sf
        - elsif can? :read, sf.object
          = render 'show_mission', mission: sf.object
