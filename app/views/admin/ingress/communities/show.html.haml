%dl.dl-horizontal
  %dt ID
  %dd= "##{@community.id}"
  %dt Name
  %dd= @community.name

%table.table.table-condensed.table-striped
  %thead
    %tr
      %th{ colspan: 3 } Missions
    %tr
      %th Mission Series
      %th Mission Name
      %th Link
  %tbody
    - @community.missions.each do |mission|
      - if can? :read, mission
        - if can? :edit, mission
          %tr
            %td= mission.mission_series.try(:name) || ''
            %td= mission.name
            %td
              %a.btn.btn-default.btn-xs{ href: mission.mission_url } Intel
        - else
          %tr
            %th{ colspan: 3 } CANNOT EDIT
      - else
        %tr
          %th{ colspan: 3 } CANNOT READ
